       <script>
        const mainValue = document.querySelector('.modal2')
        const loginValue = document.querySelector('.main1')

        function login() {
            loginValue.classList.remove('open')
            mainValue.classList.add('open')
        }


        function logout() {
            loginValue.classList.add('open')
            mainValue.classList.remove('open')
        }

        const submitGon = document.querySelector('.submitHao');
        const logoutGon = document.querySelector('.logoutHao');
        
        submitGon.addEventListener('click', login)
        logoutGon.addEventListener('click', logout)

       </script>

